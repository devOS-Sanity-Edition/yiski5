<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%cyan(%d{HH:mm:ss:SSS})] [%magenta(%thread)] [%highlight(%level)] [%logger] %cyan:: %highlight(%msg) %n</pattern>
        </encoder>
    </appender>
    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
